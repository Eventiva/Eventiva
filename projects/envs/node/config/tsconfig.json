{
  "extends": "@bitdev/node.node-env/config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "es2021",
      "DOM",
      "ES6",
      "DOM.Iterable"
    ]
  },
  "include": [
    "**/*",
    "**/*.json",
    ".mocharc.js"
  ],
  "exclude": [
    "artifacts",
    "public",
    "dist",
    "node_modules",
    "package.json",
    "**/*.cjs"
  ]
}
