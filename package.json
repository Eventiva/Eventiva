{
  "name": "@eventiva/eventiva",
  "version": "0.0.0",
  "description": "Imagine a place where you can find all your event vendors, venues and professionals, alongside all the tools you require to be successful within the live events market. ",
  "repository": "https://github.com/eventiva/eventiva",
  "keywords": [],
  "private": true,
  "scripts": {
    "preinstall": "node ./common/scripts/preroot.js",
    "postinstall": "bit import && bit compile && bit link"
  },
  "xo": {
    "rules": {
      "semicolon": 0,
      "import/extensions": 0,
      "n/file-extension-in-import": [
        "error",
        "always",
        {
          ".js": "never",
          ".mjs": "never",
          ".tsx": "never"
        }
      ],
      "import/no-cycle": [
        2,
        {
          "maxDepth": 1
        }
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "xo-typescript"
    ],
    "rules": {
      "no-trailing-spaces": [
        "error",
        {
          "ignoreComments": true
        }
      ]
    }
  }
}